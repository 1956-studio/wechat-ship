    <script>
	function to(url){
		NProgress.start();
		$.ajax({url:url, success: function(data){
			$("#body").html("");
			$("#body").html(data);
			NProgress.done();
		}});
	}
	
	function subform (formId, action, method) {
		NProgress.start();
		$.ajax({
			type: method || $("#"+formId).attr("method"),
			url: action || $("#"+formId).attr("action"),
			data: $("#"+formId).serialize(),
			success: function (data) {
				$("body").html("");
				$("body").html(data);
				NProgress.done();
			},
			error: function () {
				NProgress.done();
			}
		});
	}
	</script>
